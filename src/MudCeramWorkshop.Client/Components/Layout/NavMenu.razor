@using MudCeramWorkshop.Client.Components.Layout.Resources
@implements IDisposable

@inject NavigationManager NavigationManager

<MudNavMenu>
    <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 my-3">Workshop</MudText>
    <MudNavLink Href="Products" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ListAlt">@Localizer["NavMenu_MyProducts"]</MudNavLink>
    <MudNavLink Href="Materials" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ListAlt">@Localizer["NavMenu_Clays"]</MudNavLink>
    <MudNavLink Href="Firings" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ListAlt">@Localizer["NavMenu_Firing"]</MudNavLink>

    <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 my-3">Personal</MudText>

    <MudNavLink Href="/Account/Manage" Icon="@Icons.Material.Outlined.Person">Manage Account</MudNavLink>
    <MudNavLink Href="/Account/Manage" Icon="@Icons.Material.Outlined.Person">Manage Workshop</MudNavLink>

    @* <MudText Typo="Typo.subtitle2" Color="Color.Inherit" Class="ml-4 my-3">Other</MudText> *@
    @* <MudNavLink Href="swagger" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Lock">swagger</MudNavLink> *@
    <MudNavLink Href="@($"Account/Logout?ReturnUrl={currentUrl}")" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">Logout</MudNavLink>
</MudNavMenu>


@code {
    [Inject] IStringLocalizer<MenuTranslation> Localizer { get; set; }

    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}


